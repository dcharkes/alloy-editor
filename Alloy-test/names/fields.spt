module names-fields

language Alloy

setup Common [[
	module test
]]

test Duplicate field error [[
	sig A {}
	sig B {[[a]]:A, [[a]]:A}
]] 2 errors

test Duplicate field error 2 [[
	sig A {}
	sig B {[[a]], [[a]]:A}
]] 2 errors

test Resolve ref to field [[
	sig A {}
	sig B {[[a]]:A}
	
	pred show (b:B){
		#b.[[a]]>1
	}
]] resolve #2 to #1

test Resolve ref to field twice [[
	sig A {}
	sig B {[[a]]:A}
	sig C {b:B}
	
	pred show (c:C){
		#c.b.[[a]]>1
	}
]] resolve #2 to #1

test Resolve ref to field in super type [[
sig A {}
sig B {[[a]]:A}
sig C extends B{}

pred show (b:C){
	#b.[[a]]>1
}
]] resolve #2 to #1

test No error on same field in different signatures [[
	sig A {a:A}
	sig B {a:A}
]] 0 errors

test Error on field overriding in subtype [[
	sig A {a:A}
	sig B extends A {[[a]]:A}
]] 1 error
