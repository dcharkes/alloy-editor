// Grammar for the Alloy language
// By default, based on an example "entity language" syntax

module Alloy

imports 

	Common

context-free start-symbols

	Start

context-free syntax

	Start.Module = <
		module <ID> 
		
		<{Definition "\n\n"}*>
	>

	Definition.Entity = <
		entity <ID> {
			<{Property "\n"}*>
		}
	>
  	
	Property.Property = <<ID> : <Type>>
	
	Type.Type = <<ID>>

