<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
   <extension
         point="org.eclipse.imp.runtime.languageDescription">
      <language
            extensions="als"
            description="Alloy"
            language="Alloy"
            derivedFrom="DynamicRoot"
            validator="Alloy.AlloyValidator"
            validatorClass="Alloy.AlloyValidator"
      ></language>
   </extension>
   <extension
         id="Alloy.parser"
         name="Alloy Parser"
         point="org.eclipse.imp.runtime.parser">
      <parser
            class="Alloy.AlloyParseController"
            language="Alloy">
      </parser>
   </extension>    
</plugin>
